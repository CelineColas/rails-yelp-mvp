<%= form_for [@restaurant, @review], html: { class: 'form-inline' } do |f| %>

  <% if @review.errors.any? %>
  <div id="error_explanation">
    <ul>
      <% @review.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
  </div>
  <% end %>

    <%= f.label :content %>
    <%= f.text_field :content %>

    <%= f.select :rating, [0,1,2,3,4,5] %>

    <%= f.submit %>

<% end %>
