<div class="text-center">
  <h2>All the restaurants</h2>

  <div class="table-responsive">
    <table class="table table-striped">
      <tr>
        <td>Name</td>
        <td>Address</td>
      </tr>
      <% @restaurants.each do |restaurant| %>
      <tr>
        <td><%=link_to restaurant_path(restaurant) do %>
          <%= restaurant.name %></td>
          <% end %>
          <td><%= restaurant.address %></td>
        </tr>
        <% end %>
      </table>
    </div>


  <p><%= link_to "Add a new restaurant", new_restaurant_path, class: "btn btn-success"%></p>
</div>
