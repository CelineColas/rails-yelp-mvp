<%= simple_form_for(@restaurant, html: { class: 'form-horizontal' }) do |f| %>

    <%= f.label :name %>
    <%= f.text_field :name %>

    <%= f.label :address %>
    <%= f.text_field :address %>

    <%= f.label :phone_number %>
    <%= f.text_field :phone_number %>

    <%= f.label :category %>
    <%= f.select :category, ["Chinese", "French", "Belgian", "Italian", "Japanese"] %>

    <%= f.submit %>

<% end %>
